                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Flee</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Avoid</Label>
            </StackPanel>
            <StackPanel Grid.Column="3" Grid.Row="1"><!--I Choices-->
                <Label FontSize="22" Padding="10,0,10,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Width="40">I</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Honor</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Attack</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Avoid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Aid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Rob</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Follow</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Question</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Pray</Label>
            </StackPanel>
            <StackPanel Grid.Column="4" Grid.Row="1"><!--J Choices-->
                <Label FontSize="22" Padding="10,0,10,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Width="40">J</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Pray</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Study</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Capture</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Attack</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Follow</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Aid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Seek aid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Hide</Label>
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="2"><!--K Choices-->
                <Label FontSize="22" Padding="10,0,10,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Width="40">K</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Grovel</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Honor</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Bribe</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Converse</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Trick</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Attack</Label>
                <TextBlock HorizontalAlignment="Center" Padding="0,0,0,0" MaxWidth="90" TextWrapping="Wrap" TextAlignment="Center">Attempt to escape</TextBlock>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Wait</Label>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="2"><!--L Choices-->
                <Label FontSize="22" Padding="10,0,10,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Width="40">L</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Attack</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Aid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Rob</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Avoid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Barter</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Honor</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Court</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Abduct</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Hire</Label>
            </StackPanel>
            <StackPanel Grid.Column="2" Grid.Row="2"><!--M Choices-->
                <Label FontSize="22" Padding="10,0,10,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Width="40">M</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Grovel</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Aid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Avoid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Bargain</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Attack</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Trick</Label>
            </StackPanel>
            <StackPanel Grid.Column="3" Grid.Row="2"><!--N Choices-->
                <Label FontSize="22" Padding="10,0,10,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Width="40">N</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Avoid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Pray</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Attack</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Bargain</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Examine</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Enter</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Seek Aid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Aid</Label>
            </StackPanel>
            <StackPanel Grid.Column="4" Grid.Row="2"><!--O Choices-->
                <Label FontSize="22" Padding="10,0,10,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Width="40">O</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Grovel</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Aid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Avoid</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Bargain</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Attack</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Trick</Label>
                <Label HorizontalAlignment="Center" Padding="0,0,0,0">Hire</Label>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0">TODO: Some kinda dynamic grid</TextBlock><!--Active Skills-->
            <Ellipse Grid.Row="1" Width="150" Height="150" StrokeThickness="2" Stroke="Black"/><!--Character Token-->
        </Grid>
    </Grid>
</Window>
